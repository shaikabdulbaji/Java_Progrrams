public class b11_find_the_max_length_word_in_a_given_string_Compare_two_strings_if_the_characters_in_string1_are_present_in_string2_then_it_should_be_printed_as_such_in_output_else_should_be_printed_in_output {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Please Enter the String : ");
		
		String input = scanner.nextLine();
		
		System.out.println("Input : " +input);
		
		String[] words = input.split(" ");
		
		
		String[] outputArr = new String[words.length/2];
		int index = 0;
		for(int i=0; i<words.length; i++)
		{
			if(i%2!=0) 
			{
				outputArr[index] = words[i];
				index++;
			}
		}
		
